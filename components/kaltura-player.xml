        <function name="sourceSelectedListener" />

        <function name="setup" />
        <function name="destroy"/>
        <function name="reset"/>

        <function name="loadMedia" />
        <function name="setMedia" />

        <function name="play" />
        <function name="pause" />
        <function name="preload" />
        <function name="load" />
        <function name="loop" />
        <function name="mute" />

